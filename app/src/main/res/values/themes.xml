<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.EnglishLearningApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">#030213</item>
        <item name="colorPrimaryVariant">#030213</item>
        <item name="colorOnPrimary">#FFFFFF</item>

        <!-- Secondary color -->
        <item name="colorSecondary">#ECECF0</item>
        <item name="colorOnSecondary">#030213</item>

        <!-- Background -->
        <item name="android:windowBackground">#FFFFFF</item>
    </style>
    <style name="AnswerOption">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:layout_marginBottom">12dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">16dp</item>

        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_main</item>

        <item name="android:background">@drawable/bg_activity_item</item>
    </style>


</resources>
