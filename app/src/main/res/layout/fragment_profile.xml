<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/profile_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="24dp">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="16dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Profile"
                android:textSize="28sp"
                android:textStyle="600"
                android:textColor="#1A1A1A" />

            <ImageButton
                android:id="@+id/btnSettings"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:background="@android:color/transparent"
                android:src="@android:drawable/ic_menu_manage"
                android:tint="#757575"
                android:contentDescription="Settings" />
        </LinearLayout>

        <!-- Profile Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:background="@drawable/profile_gradient"
                android:clipToPadding="false"
                android:clipToOutline="true"
                android:paddingTop="18dp"
                android:paddingBottom="18dp"
                android:backgroundTintMode="src_over"
                android:layout_marginBottom="12dp">

                <!-- Avatar -->
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tvAvatar"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:gravity="center"
                        android:text="ðŸ˜Š"
                        android:textSize="30sp"
                        android:background="@drawable/avatar_bg"
                        android:layout_marginEnd="12dp" />

                    <ImageButton
                        android:id="@+id/btnCamera"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="bottom|end"
                        android:layout_marginTop="36dp"
                        android:layout_marginStart="10dp"
                        android:background="@drawable/circle_white"
                        android:src="@android:drawable/ic_menu_camera"
                        android:tint="#7C4DFF"
                        android:contentDescription="Camera" />
                </FrameLayout>

                <!-- User Info -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/tvUserName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="LearnerPro"
                            android:textSize="22sp"
                            android:textStyle="700"
                            android:textColor="#FFFFFF" />

                        <ImageButton
                            android:id="@+id/btnEdit"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:background="@android:color/transparent"
                            android:src="@android:drawable/ic_menu_edit"
                            android:tint="#FFFFFF"
                            android:contentDescription="Edit"
                            android:layout_marginStart="8dp"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvMemberSince"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Member since Dec 2024"
                        android:textSize="14sp"
                        android:textColor="#EDE7F6"
                        android:layout_marginTop="6dp"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Stats -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3"
                android:padding="4dp"
                android:layout_marginBottom="8dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="12dp">

                    <TextView
                        android:id="@+id/tvWordsLearned"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="755"
                        android:textSize="20sp"
                        android:textStyle="700"
                        android:textColor="#FFFFFF"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Words Learned"
                        android:textSize="12sp"
                        android:textColor="#EDE7F6"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="12dp">

                    <TextView
                        android:id="@+id/tvStreak"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="28"
                        android:textSize="20sp"
                        android:textStyle="700"
                        android:textColor="#FFFFFF"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Day Streak"
                        android:textSize="12sp"
                        android:textColor="#EDE7F6"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="12dp">

                    <TextView
                        android:id="@+id/tvRank"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="#4"
                        android:textSize="20sp"
                        android:textStyle="700"
                        android:textColor="#FFFFFF"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ranking"
                        android:textSize="12sp"
                        android:textColor="#EDE7F6"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- Tabs -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:weightSum="3">

            <Button
                android:id="@+id/btnFavorites"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="44dp"
                android:text="Favorites (0)"
                android:padding="8dp"
                android:textSize="14sp"
                android:textStyle="600"/>

            <Button
                android:id="@+id/btnKnown"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="44dp"
                android:text="Known (0)"
                android:padding="8dp"
                android:textSize="14sp"
                android:textStyle="600"/>

            <Button
                android:id="@+id/btnUnknown"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="44dp"
                android:text="Don't Know (0)"
                android:padding="8dp"
                android:textSize="14sp"
                android:textStyle="600"/>

        </LinearLayout>

        <!-- Recycler / list -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/profileRecycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:nestedScrollingEnabled="false"/>
    </LinearLayout>
</ScrollView>
